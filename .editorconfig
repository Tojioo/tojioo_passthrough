# EditorConfig
# https://editorconfig.org

root = true

# ==============================================================
# Default settings
# ==============================================================
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
tab_width = 4
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 215
ij_continuation_indent_size = 4
ij_smart_tabs = false

# ==============================================================
# YAML
# ==============================================================
[*.{yml,yaml}]
tab_width = 2
indent_size = 2
ij_yaml_spaces_within_brackets = false

# ==============================================================
# JavaScript
# ==============================================================
[{*.cjs,*.es6,*.js,*.mjs}]
ij_javascript_align_multiline_parameters = true
ij_javascript_align_multiline_for = true

# Brace style (Allman)
ij_javascript_block_brace_style = next_line
ij_javascript_class_brace_style = next_line
ij_javascript_method_brace_style = next_line
ij_javascript_function_expression_brace_style = next_line

# Force braces on control structures
ij_javascript_if_brace_force = always
ij_javascript_for_brace_force = always
ij_javascript_while_brace_force = always
ij_javascript_do_while_brace_force = always

# Brace/keyword placement (Allman)
ij_javascript_else_on_new_line = true
ij_javascript_catch_on_new_line = true
ij_javascript_finally_on_new_line = true
ij_javascript_while_on_new_line = true

# Field naming
ij_javascript_field_prefix = _

# Blank lines
ij_javascript_blank_lines_after_imports = 1
ij_javascript_blank_lines_around_class = 1
ij_javascript_blank_lines_around_field = 0
ij_javascript_blank_lines_around_function = 1
ij_javascript_blank_lines_around_method = 1
ij_javascript_keep_blank_lines_in_code = 1

# Spaces around operators
ij_javascript_spaces_around_additive_operators = true
ij_javascript_spaces_around_assignment_operators = true
ij_javascript_spaces_around_bitwise_operators = true
ij_javascript_spaces_around_equality_operators = true
ij_javascript_spaces_around_logical_operators = true
ij_javascript_spaces_around_multiplicative_operators = true
ij_javascript_spaces_around_relational_operators = true
ij_javascript_spaces_around_shift_operators = true
ij_javascript_spaces_around_arrow_function_operator = true
ij_javascript_spaces_around_unary_operator = false

# Spaces within
ij_javascript_spaces_within_parentheses = false
ij_javascript_spaces_within_brackets = false
ij_javascript_spaces_within_array_initializer_brackets = false
ij_javascript_spaces_within_object_literal_braces = false
ij_javascript_spaces_within_method_call_parentheses = false
ij_javascript_spaces_within_method_parentheses = false
ij_javascript_spaces_within_if_parentheses = false
ij_javascript_spaces_within_for_parentheses = false
ij_javascript_spaces_within_while_parentheses = false
ij_javascript_spaces_within_switch_parentheses = false
ij_javascript_spaces_within_catch_parentheses = false

# Space before parentheses/braces
ij_javascript_space_before_method_call_parentheses = false
ij_javascript_space_before_method_parentheses = false
ij_javascript_space_before_function_left_parenth = false
ij_javascript_space_before_if_parentheses = true
ij_javascript_space_before_for_parentheses = true
ij_javascript_space_before_while_parentheses = true
ij_javascript_space_before_switch_parentheses = true
ij_javascript_space_before_catch_parentheses = true

# Wrapping
ij_javascript_method_parameters_wrap = on_every_item
ij_javascript_method_parameters_new_line_after_left_paren = true
ij_javascript_method_parameters_right_paren_on_new_line = false
ij_javascript_call_parameters_wrap = on_every_item
ij_javascript_call_parameters_new_line_after_left_paren = true
ij_javascript_call_parameters_right_paren_on_new_line = true
ij_javascript_method_call_chain_wrap = on_every_item
ij_javascript_chained_call_dot_on_new_line = true
ij_javascript_indent_chained_calls = true
ij_javascript_array_initializer_wrap = on_every_item
ij_javascript_object_literal_wrap = on_every_item
ij_javascript_ternary_operation_wrap = on_every_item
ij_javascript_ternary_operation_signs_on_next_line = true

# Other
ij_javascript_use_double_quotes = false
ij_javascript_use_semicolon_after_statement = true
ij_javascript_keep_simple_blocks_in_one_line = false
ij_javascript_keep_simple_methods_in_one_line = false
ij_javascript_indent_case_from_switch = true

